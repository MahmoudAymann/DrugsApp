<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="appBarMain"
            type="maymanm.drugsapp.viewmodel.activity.MainActivityViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.ui.activity.MainActivity">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:theme="@style/AppTheme.AppBarOverlay"
            android:background="@color/white">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:title="@null">


                <RelativeLayout
                    android:id="@+id/rl_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp">

                    <TextView
                        android:id="@+id/toolbar_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textAlignment="center"
                        android:layout_centerVertical="true"
                        android:textColor="@color/tool_bar_title_color"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/btn_search"
                        android:textSize="@dimen/toolbar_title_size"
                        />

                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        style="@style/MyFabNoBackgroundStyle"
                        android:id="@+id/btn_search"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        app:fabSize="mini"
                        android:layout_marginEnd="@dimen/toolbar_icon_margin_end"
                        android:layout_marginStart="@dimen/toolbar_icon_margin_start_to_title"
                        android:src="@drawable/ic_search"
                        app:visibleInvisible="@{appBarMain.showSearchIcon}"
                        android:onClick="@{()->appBarMain.onSearchClick()}"
                        />
                </RelativeLayout>

            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <include android:id="@+id/content_main"
            layout="@layout/content_main"
            bind:contentMain="@{appBarMain}"/>

    </LinearLayout>
</layout>