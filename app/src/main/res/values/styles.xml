<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->

        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textCursorDrawable">@drawable/cursor_drawable</item>
        <item name="floatingActionButtonStyle">@style/MyFabColorStyle</item>
        <!--<item name="android:windowTranslucentNavigation">true</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Transparent" parent="AppTheme.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <!--<item name="android:windowIsFloating">true</item> &lt;!&ndash;act like dialog&ndash;&gt;-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TextInputLayoutNoBorder" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@null</item>
        <item name="boxBackgroundColor">@color/background_color</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
    </style>

    <style name="TextInputLayoutNoBorderDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">filled</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorIconTint">@null</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputLayoutBorder" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundMode">outline</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/text_input_label_color</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
    </style>

    <style name="TextInputLayoutBorderDense" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundMode">outline</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">2dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="hintTextColor">@color/text_input_label_color</item>
        <item name="hintEnabled">false</item>
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textColorHint">@color/text_color</item>

    </style>

    <style name="Activity.Transparent" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
    </style>

    <style name="MyRatingBarStyle.Indicator" parent="Widget.MaterialRatingBar.RatingBar.Indicator">
        <item name="android:indeterminate">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="mrb_fillBackgroundStars">false</item>
        <item name="mrb_progressTint">@color/colorAccent</item>
        <item name="mrb_secondaryProgressTint">@color/colorAccent</item>
        <item name="mrb_progressBackgroundTint">@color/colorAccent</item>
    </style>
    <style name="MyRatingBarStyle.Indicator.Small" parent="Widget.MaterialRatingBar.RatingBar.Indicator.Small">
        <item name="android:indeterminate">false</item>
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="mrb_fillBackgroundStars">false</item>
        <item name="mrb_progressTint">@color/colorAccent</item>
        <item name="mrb_secondaryProgressTint">@color/colorAccent</item>
        <item name="mrb_progressBackgroundTint">@color/colorAccent</item>
    </style>


    <style name="MyRatingBarStyle" parent="Widget.MaterialRatingBar.RatingBar">
        <item name="android:numStars">5</item>
        <item name="android:stepSize">0.5</item>
        <item name="mrb_fillBackgroundStars">false</item>
        <item name="mrb_progressTint">@color/colorAccent</item>
        <item name="mrb_secondaryProgressTint">@color/colorAccent</item>
        <item name="mrb_progressBackgroundTint">@color/colorAccent</item>
    </style>

    <style name="ProfileTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>


    <style name="ContainerCardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardBackgroundColor">@android:color/transparent</item>
        <item name="strokeColor">@color/white</item>
        <item name="strokeWidth">1dp</item>
        <item name="cardElevation">0dp</item>
    </style>

    <style name="TabIndicatorTransitionStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabIndicator">@drawable/background_tab_indicator_transition_dot</item>
        <item name="tabBackground">@drawable/background_amber_dot_3dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicatorGravity">center</item>
        <item name="tabMaxWidth">12dp</item>
    </style>

    <style name="TabIndicatorStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/selector_tab_indicator_dot</item>
        <item name="tabGravity">center</item>
        <item name="tabIndicator">@null</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="tabPaddingEnd">6dp</item>
        <item name="tabPaddingStart">6dp</item>
    </style>


</resources>
