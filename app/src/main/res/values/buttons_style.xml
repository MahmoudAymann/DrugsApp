<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ButtonFilled" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonFilled.Large" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/dp12h</item>
        <item name="android:paddingBottom">@dimen/dp12h</item>
    </style>

    <style name="ButtonUnelevatedStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonUnelevatedStyle.Large" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/dp12h</item>
        <item name="android:paddingBottom">@dimen/dp12h</item>
    </style>

    <style name="ButtonTextStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="ButtonTextStyle.Large" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:paddingTop">@dimen/dp12h</item>
        <item name="android:paddingBottom">@dimen/dp12h</item>
        
    </style>

    <style name="NavDrawerItemStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/nav_drawer_text_size</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">@color/text_color</item>
        <item name="iconPadding">@dimen/nav_drawer_item_icon_padding</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SubmitButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_background</item>
    </style>

    <style name="MyFabColorStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="tint">@color/white</item>
    </style>


    <style name="MyFabNoBackgroundStyle" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="tint">@color/black</item>
        <item name="elevation">0dp</item>
        <item name="borderWidth">0dp</item>
        <item name="rippleColor">@color/transparent</item>
    </style>


</resources>
